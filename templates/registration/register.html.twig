{% extends 'base.html.twig' %}

{% block title %}S'enregistrer |&nbsp;{{ parent() }}{% endblock %}
{% block navLogin %}active{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}


{% block body %}
<main>
    <div class="container bodyForm">
        <div class="form-control">
            <div class="d-flex justify-content-center align-items-center flex-wrap">
                {{ form_start(formRegister) }}
					<h1>
						<b>S'inscrire</b>
					</h1>
                    <p>Pourquoi s'inscrire ? Vous pourrez chatter directement avec notre équipe à l'aide de notre messagerie instantanée !</p>
                    
					{{ form_errors(formRegister) }}

                    <div class="row justify-content-between">
						<div class="col-12">
							{{ form_widget(formRegister.email) }}
						</div>
					</div>

                    <div class="row justify-content-between">
                        <div class="col-12">
							{{ form_widget(formRegister.password) }}
						</div>
                    </div>
                    <br>

					<div class="row justify-content-between">
						<div class="col-12 col-md-6">
							{{ form_label(formRegister.Civility) }}
							<div class="radioContact">
								{{ form_widget(formRegister.Civility) }}
							</div>
						</div>
					</div>
                    <br>

					<div class="row justify-content-between">
						<div class="col-12 col-md-6">
							{{ form_widget(formRegister.Lastname) }}
						</div>
						<div class="col-12 col-md-6">
							{{ form_widget(formRegister.Firstname) }}
						</div>

					</div>

					<div class="row justify-content-between">
                        <div class="col-12 col-md-6">
							{{ form_widget(formRegister.Society) }}
						</div>
						<div class="col-12 col-md-6">
							{{ form_widget(formRegister.Phone) }}
						</div>
					</div>

					<div class="row justify-content-between">
						<div class="col-12 col-md-6">
							{{ form_widget(formRegister.City) }}
						</div>
						<div class="col-12 col-md-6">
							{{ form_widget(formRegister.Postal) }}
						</div>
					</div>

					<div class="d-grid gap-2 col-6 mx-auto">
						{{ form_widget(formRegister) }}
						<button class="btn btn-primary">Envoyer</button>
					</div>
					{{ form_end(formRegister) }}
            </div>
        </div>
    </div>
</main>
{% endblock %}
